@model AFMS.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="app-container">
    <!-- Left Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="app-logo">
                <img src="~/images/AFMS logo.png" alt="AFMS Logo" style="width: 100%; height: 100%; object-fit: contain;" />
            </div>
            <div class="app-info">
                <h1 class="app-title">AFMS</h1>
            </div>
            <button class="close-btn">‚úï</button>
        </div>

        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Home")" class="nav-item">
                <span class="nav-label">Dashboard</span>
            </a>
            <a href="@Url.Action("Add", "Flight")" class="nav-item">
                <span class="nav-label">Add Flight</span>
            </a>
            <a href="@Url.Action("Index", "Flight")" class="nav-item active">
                <span class="nav-label">Flight Details</span>
            </a>
            <a href="@Url.Action("AdvancedSearch", "Home")" class="nav-item">
                <span class="nav-label">Advanced Search</span>
            </a>
        </nav>

        <div class="sidebar-footer"></div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <header class="top-bar">
            <div class="top-bar-spacer"></div>
            <div class="top-bar-right">
                <div class="current-time">
                    <span class="time-label">Current Time</span>
                    <span class="time-value" id="currentTime">00:00:00</span>
                </div>
                <div class="user-avatar">
                    <button class="avatar-btn">A</button>
                </div>
            </div>
        </header>

        <div class="dashboard-container">
            <div class="page-header">
                <a href="@Url.Action("Index", "Flight")" style="color: #3b82f6; text-decoration: none; margin-bottom: 10px; display: inline-block;">
                    ‚Üê Back to All Flights
                </a>
                <h1 class="page-title">Delete Flight</h1>
                <p class="page-subtitle">Are you sure you want to delete this flight?</p>
            </div>

            <div style="background: #1e293b; border-radius: 12px; padding: 32px; margin-bottom: 24px;">
                <div style="background: #ef4444; color: white; padding: 16px; border-radius: 8px; margin-bottom: 24px;">
                    <strong>‚ö†Ô∏è Warning:</strong> This action cannot be undone. The flight will be permanently removed from the database.
                </div>

                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px;">
                    <div style="background: #0f172a; padding: 20px; border-radius: 8px;">
                        <p style="color: #64748b; margin: 0 0 8px 0; font-size: 14px;">Flight Number</p>
                        <p style="color: #f1f5f9; margin: 0; font-size: 18px; font-weight: 600;">@Model.FlightNumber</p>
                    </div>
                    
                    <div style="background: #0f172a; padding: 20px; border-radius: 8px;">
                        <p style="color: #64748b; margin: 0 0 8px 0; font-size: 14px;">Airline</p>
                        <p style="color: #f1f5f9; margin: 0; font-size: 18px; font-weight: 600;">@Model.Airline</p>
                    </div>
                    
                    <div style="background: #0f172a; padding: 20px; border-radius: 8px;">
                        <p style="color: #64748b; margin: 0 0 8px 0; font-size: 14px;">Destination</p>
                        <p style="color: #f1f5f9; margin: 0; font-size: 18px; font-weight: 600;">@Model.Destination</p>
                    </div>
                    
                    <div style="background: #0f172a; padding: 20px; border-radius: 8px;">
                        <p style="color: #64748b; margin: 0 0 8px 0; font-size: 14px;">Departure Time</p>
                        <p style="color: #f1f5f9; margin: 0; font-size: 18px; font-weight: 600;">@Model.DepartureTime.ToString("MMM dd, yyyy HH:mm")</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" style="display: flex; gap: 16px;">
                @Html.AntiForgeryToken()
                <button type="submit" style="padding: 12px 24px; background: #ef4444; color: white; border-radius: 8px; border: none; cursor: pointer; font-weight: 500; font-size: 16px;">
                    üóëÔ∏è Confirm Delete
                </button>
                <a href="@Url.Action("Index", "Flight")" 
                   style="padding: 12px 24px; background: #64748b; color: white; border-radius: 8px; text-decoration: none; font-weight: 500;">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<script>
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('en-US', { hour12: false });
        document.getElementById('currentTime').textContent = timeString;
    }
    updateTime();
    setInterval(updateTime, 1000);
</script>
