@model AFMS.Models.Flight

@{
    ViewData["Title"] = "Edit Flight";
}

@section Styles {
    <link rel="stylesheet" href="~/css/add-flight.css" />
}

<!-- Page Header -->
<div class="page-header">
    <a href="@Url.Action("Index", "Flight")" style="color: #3b82f6; text-decoration: none; margin-bottom: 10px; display: inline-block;">
        ‚Üê Back to All Flights
    </a>
    <h1 class="page-title">Edit Flight @Model.FlightNumber</h1>
    <p class="page-subtitle">Update flight details</p>
</div>

<!-- Edit Flight Form Card -->
<div class="form-card">
                <form asp-action="Edit" method="post" class="flight-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <!-- Flight Information Section -->
                    <div class="form-section">
                        <h2 class="section-title">Flight Information</h2>
                        <div class="form-grid">
                            <div class="form-group">
                                <label asp-for="FlightNumber" class="form-label">Flight Number</label>
                                <input asp-for="FlightNumber" class="form-input" placeholder="e.g., AA1234" />
                                <span asp-validation-for="FlightNumber" class="validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Airline" class="form-label">Airline</label>
                                <select asp-for="Airline" class="form-select">
                                    <option value="">Select Airline</option>
                                    <option value="American Airlines">American Airlines</option>
                                    <option value="Delta Air Lines">Delta Air Lines</option>
                                    <option value="United Airlines">United Airlines</option>
                                    <option value="Southwest Airlines">Southwest Airlines</option>
                                    <option value="JetBlue Airways">JetBlue Airways</option>
                                    <option value="Alaska Airlines">Alaska Airlines</option>
                                    <option value="Spirit Airlines">Spirit Airlines</option>
                                    <option value="Frontier Airlines">Frontier Airlines</option>
                                    <option value="Hawaiian Airlines">Hawaiian Airlines</option>
                                    <option value="Allegiant Air">Allegiant Air</option>
                                </select>
                                <span asp-validation-for="Airline" class="validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Destination" class="form-label">Destination</label>
                                <input asp-for="Destination" class="form-input" placeholder="e.g., LAX - Los Angeles" />
                                <span asp-validation-for="Destination" class="validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Scheduled">Scheduled</option>
                                    <option value="On Time">On Time</option>
                                    <option value="Delayed">Delayed</option>
                                    <option value="Boarding">Boarding</option>
                                    <option value="Departed">Departed</option>
                                    <option value="Arrived">Arrived</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                                <span asp-validation-for="Status" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Timing Section -->
                    <div class="form-section">
                        <h2 class="section-title">Timing</h2>
                        <div class="form-grid two-columns">
                            <div class="form-group">
                                <label asp-for="DepartureTime" class="form-label">Departure Time</label>
                                <input asp-for="DepartureTime" type="datetime-local" class="form-input datetime-input" />
                                <span asp-validation-for="DepartureTime" class="validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ArrivalTime" class="form-label">Arrival Time</label>
                                <input asp-for="ArrivalTime" type="datetime-local" class="form-input datetime-input" />
                                <span asp-validation-for="ArrivalTime" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Logistics Section -->
                    <div class="form-section">
                        <h2 class="section-title">Logistics</h2>
                        <div class="form-grid two-columns">
                            <div class="form-group">
                                <label asp-for="Gate" class="form-label">Gate</label>
                                <input asp-for="Gate" class="form-input" placeholder="e.g., B12" />
                                <span asp-validation-for="Gate" class="validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Terminal" class="form-label">Terminal</label>
                                <select asp-for="Terminal" class="form-select">
                                    <option value="1">Terminal 1</option>
                                    <option value="2">Terminal 2</option>
                                    <option value="3">Terminal 3</option>
                                    <option value="4">Terminal 4</option>
                                    <option value="5">Terminal 5</option>
                                </select>
                                <span asp-validation-for="Terminal" class="validation-error"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <span class="btn-icon">üíæ</span>
                            UPDATE FLIGHT
                        </button>
                        <a href="@Url.Action("Index", "Flight")" class="btn btn-danger">
                            <span class="btn-icon">‚úï</span>
                            CANCEL
                        </a>
                    </div>
                </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
