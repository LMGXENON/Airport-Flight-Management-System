@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" />

<div class="app-container">
    <!-- Left Sidebar -->
    <aside class="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="app-logo">
                <img src="~/images/AFMS logo.png" alt="AFMS Logo" style="width: 100%; height: 100%; object-fit: contain;" />
            </div>
            <div class="app-info">
                <h1 class="app-title">AFMS</h1>
            </div>
            <button class="close-btn">✕</button>
        </div>

        <!-- Navigation Menu -->
        <nav class="sidebar-nav">
            <a href="#" class="nav-item active">
                <span class="nav-label">Dashboard</span>
            </a>
            <a href="#" class="nav-item">
                <span class="nav-label">Add Flight</span>
            </a>
            <a href="#" class="nav-item">
                <span class="nav-label">Flight Details</span>
            </a>
            <a href="@Url.Action("AdvancedSearch", "Home")" class="nav-item">
                <span class="nav-label">Advanced Search</span>
            </a>
            <a href="#" class="nav-item">
                <span class="nav-label">Data Import</span>
            </a>
        </nav>

        <!-- Sidebar Footer -->
        <div class="sidebar-footer"></div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="top-bar-spacer"></div>
            <div class="top-bar-right">
                <div class="current-time">
                    <span class="time-label">Current Time</span>
                    <span class="time-value" id="currentTime">11:03:04</span>
                </div>
                <div class="user-avatar">
                    <button class="avatar-btn">A</button>
                </div>
            </div>
        </header>

        <!-- Dashboard Content -->
        <div class="dashboard-container">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Dashboard</h1>
                <p class="page-subtitle">Overview of airport operations</p>
            </div>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-label">Total Flights</div>
                        <div class="stat-value">248</div>
                    </div>
                    <div class="stat-badge positive">+12%</div>
                </div>

                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-label">Total Passengers</div>
                        <div class="stat-value">45,231</div>
                    </div>
                    <div class="stat-badge positive">+8%</div>
                </div>

                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-label">On Time Rate</div>
                        <div class="stat-value">94.2%</div>
                    </div>
                    <div class="stat-badge positive">+2.1%</div>
                </div>

                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-label">Delayed</div>
                        <div class="stat-value">14</div>
                    </div>
                    <div class="stat-badge negative">-3%</div>
                </div>
            </div>

            <!-- Recent Flights Section -->
            <div class="flights-section">
                <h2 class="section-title">Recent Flights</h2>
                <div class="table-wrapper">
                    <table class="flights-table">
                        <thead>
                            <tr>
                                <th>Flight</th>
                                <th>Airline</th>
                                <th>Route</th>
                                <th>Departure</th>
                                <th>Arrival</th>
                                <th>Gate</th>
                                <th>Passengers</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="flight-number">BA 1234</td>
                                <td>British Airways</td>
                                <td>LHR → JFK</td>
                                <td>14:30</td>
                                <td>18:45</td>
                                <td>B22</td>
                                <td>186</td>
                                <td><span class="status-badge status-ontime">On Time</span></td>
                            </tr>
                            <tr>
                                <td class="flight-number">BA 5678</td>
                                <td>British Airways</td>
                                <td>LHR → DXB</td>
                                <td>10:15</td>
                                <td>14:30</td>
                                <td>A15</td>
                                <td>154</td>
                                <td><span class="status-badge status-boarding">Boarding</span></td>
                            </tr>
                            <tr>
                                <td class="flight-number">BA 9012</td>
                                <td>British Airways</td>
                                <td>LHR → CDG</td>
                                <td>16:00</td>
                                <td>18:30</td>
                                <td>C8</td>
                                <td>198</td>
                                <td><span class="status-badge status-delayed">Delayed</span></td>
                            </tr>
                            <tr>
                                <td class="flight-number">BA 3456</td>
                                <td>British Airways</td>
                                <td>LHR → SYD</td>
                                <td>09:45</td>
                                <td>11:15</td>
                                <td>D12</td>
                                <td>143</td>
                                <td><span class="status-badge status-departed">Departed</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Update clock every second
    function updateClock() {
        const now = new Date();
        const hours = String(now.getHours()).padStart(2, '0');
        const minutes = String(now.getMinutes()).padStart(2, '0');
        const seconds = String(now.getSeconds()).padStart(2, '0');
        document.getElementById('currentTime').textContent = `${hours}:${minutes}:${seconds}`;
    }
    setInterval(updateClock, 1000);
    updateClock();
</script>
